<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    tools:context=".AppActivity.ChatwithFriend"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/who"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WHO?"
            android:textSize="27sp"
            android:textColor="#000000"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/msg_recycle_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/yuyin"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:src="@drawable/yuyin"/>

        <EditText
            android:id="@+id/input_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="3dp"
            android:hint="Type something here"
            android:maxLines="2"/>
        <Button
            android:id="@+id/send"
            android:layout_width="55dp"
            android:layout_height="35dp"
            android:background="@drawable/button_normal"
            android:text="Send" />
        <ImageButton
            android:layout_marginLeft="3dp"
            android:id="@+id/jiahao"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:background="@drawable/button_normal"
            android:src="@drawable/jiahao"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/dibu_xianshi"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/button_normal"
            android:src="@drawable/zhaopian"/>
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/button_normal"
            android:src="@drawable/paishe"/>
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/button_normal"
            android:src="@drawable/weizhi"/>
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/button_normal"
            android:src="@drawable/mingpian"/>

    </LinearLayout>



</LinearLayout>